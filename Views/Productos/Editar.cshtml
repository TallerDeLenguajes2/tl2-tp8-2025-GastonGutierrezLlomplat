@model espacioProductos.Productos

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="h4 fw-normal text-muted mb-4">Editar producto</h1>

            <form asp-action="Editar" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="idProducto" />

                <div class="mb-4">
                    <label asp-for="descripcion" class="form-label text-muted small">Descripci√≥n</label>
                    <input asp-for="descripcion" class="form-control form-control-lg" />
                    <span asp-validation-for="descripcion" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="precio" class="form-label text-muted small">Precio</label>
                    <input asp-for="precio" type="number" step="0.01" min="0" class="form-control form-control-lg" />
                    <span asp-validation-for="precio" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-3 pt-2">
                    <button type="submit" class="btn btn-dark px-4">Guardar cambios</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>