@model espacioPresupuestos.Presupuestos
@{
    ViewData["Title"] = "Crear Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Crear" method="post">
    <div class="mb-3">
        <label class="form-label">Nombre del Destinatario</label>
        <input asp-for="NombreDestinatario" class="form-control" />
        <span asp-validation-for="NombreDestinatario" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Fecha de Creaci√≥n</label>
        <input asp-for="FechaCreacion" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Crear Presupuesto</button>
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</form>
