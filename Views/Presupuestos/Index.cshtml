@model List<espacioPresupuestos.Presupuestos>
@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Crear">Crear Nuevo Presupuesto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Destinatario</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Cantidad Productos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.IdPresupuesto</td>
                <td>@p.NombreDestinatario</td>
                <td>@p.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>@p.MontoPresupuestoConIva().ToString("C")</td>
                <td>@p.CantidadProductos()</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Detalles" asp-route-id="@p.IdPresupuesto">Detalles</a>
                    <form asp-action="Eliminar" asp-route-id="@p.IdPresupuesto" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
